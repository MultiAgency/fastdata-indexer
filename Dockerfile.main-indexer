FROM rustlang/rust:nightly-2025-12-01 AS builder
WORKDIR /app
COPY . .
RUN cargo build --release --bin main-indexer

FROM debian:trixie-slim
RUN apt-get update && apt-get install -y ca-certificates && rm -rf /var/lib/apt/lists/*
COPY --from=builder /app/target/release/main-indexer /usr/local/bin/
CMD ["main-indexer"]
